<body>
    <div class="topnav">
        <a  href="/">Home</a>
        <a  href="/create" >Create User</a>
      </div>

      <form action="/delete-user" method="post">
       
          <legend>Delete User:</legend>
          <label for="fname">Are you sure to delete this user: </label>
          <div class="d-none">
              <input type="text" id="Id" name="Id" value=" <%=userEdit.Id%>"/>
          </div>
          
          <input type="text" id="fname" name="fname" value=" <%=userEdit.firstname%>"/><br><br>
          
          <input type="text" id="lname" name="lname" value=" <%=userEdit.lastname%>"/><br><br>
     
          <input type="submit" value="Confirm" >
        </fieldset>
      </form>
</body>
